<Window x:Class="MemoryGame.Views.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MemoryGame.ViewModels"
        Title="Add User" Height="300" Width="400">

    <Window.DataContext>
        <local:AddUserViewModel/>
    </Window.DataContext>

    <Grid>
        <TextBox x:Name="UserNameTextBox" Text="{Binding NewUser.UserName}" Width="200" Height="30" Margin="10" VerticalAlignment="Top"/>

        <Button Content="Select Profile Picture" Command="{Binding SelectProfilePictureCommand}" Width="200" Height="30" Margin="10,50,10,10" VerticalAlignment="Top"/>

        <Image Source="{Binding NewUser.ProfilePictureFilePath}" Width="100" Height="100" Margin="10,100,10,10" VerticalAlignment="Top"/>

        <Button Content="Add User" Command="{Binding AddUserCommand}" Width="200" Height="30" Margin="10,160,10,10" VerticalAlignment="Top"/>
    </Grid>
</Window>
